.detail{
  padding-bottom: 160rpx;
  background-color: #f5f5f5;
}
.detail-box{
  padding:0 20rpx;
  background-color: #fff;
}

.prop-name{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #165dad;
}
.prop-like{
  width: 60rpx;
  height: 60rpx;
}
.prop{
  padding: 20rpx 0;
}


.rul-title{
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.rul-tag-item{
   width: 140rpx;
   height: 60rpx;
   line-height: 60rpx;
   text-align: center;
   font-size: 28rpx;
   margin: 0 10rpx;
   background-color: #E5E5E5;
   border-radius: 30rpx;
   color: #6a6a6a;
}
.rul-tag-item.active{
  background-color: #89AFD6;
  color: #fff;
}

.rul-item{
  padding: 20rpx 0;
}

.dec{
  margin-top: 20rpx;
  padding: 20rpx 0;
  border-top: 1rpx solid #e8e8e8;
  border-bottom: 1rpx solid #e8e8e8;
}
.dec-title{
  font-size: 28rpx;
  color: #444;
  margin-bottom: 20rpx;
}
.dec-text{
  font-size: 24rpx;
  color: #6a6a6a;
  margin-bottom: 10rpx;

}
.dec-text:last-child{
  margin-bottom: 0;
}

.price-count{
  padding: 20rpx 0;
}

.price{
  color: #165dad;
  font-size: 28rpx;
  line-height: 40rpx;
}

.icon{
  width: 40rpx;
  height: 40rpx;
}

.count{
  margin: 0 20rpx;
  width: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #165dad;
  line-height: 40rpx;
}

.btns{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background-color: #fff; 
}

.btn{
  height: 100%;
  padding: 0 20rpx;
  line-height: 120rpx;
  font-size: 32rpx;
  color: #fff;
}

.shopcart{
  background-color: #4083D6;
}

.buy{
  background-color: #165DAD;
}